<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayFruitGame">
    <include
        layout="@layout/fruit_game_appbar"
        android:id="@+id/fruitgameAppbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginVertical="32dp"
        android:layout_height="wrap_content"
        android:id="@+id/fruitImageView"
        android:layout_below="@+id/fruitgameAppbar"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fruitImg"
            android:scaleType="fitCenter"
            android:src="@drawable/fruit_game"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/answerSectionLayout"
        android:layout_below="@+id/fruitImageView"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/play_game_background"
                android:id="@+id/SpeechIconImageView"
                android:src="@drawable/ic_microphone"/>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/textIconImageView"
                android:background="@drawable/play_game_background"
                android:src="@drawable/ic_edit"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banana"
        android:layout_below="@+id/answerSectionLayout"
        android:textAlignment="center"
        android:layout_marginVertical="24dp"
        android:textSize="24sp"
        android:id="@+id/FruitImageViewAnswer"
        android:textColor="@color/orange"
        android:textStyle="bold"/>


</RelativeLayout>