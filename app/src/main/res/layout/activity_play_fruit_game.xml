<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayFruitGame">
    <include
        layout="@layout/fruit_game_appbar"
        android:id="@+id/fruitgameAppbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/fruitImageView"
        android:layout_below="@+id/fruitgameAppbar"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/fruitImg"
            android:scaleType="fitCenter"
            android:src="@drawable/fruit_game"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/actionLayout"
        android:layout_marginHorizontal="20dp"
        android:weightSum="7"
        android:layout_below="@+id/fruitImageView"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/answerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/show_answer_background"
            android:drawablePadding="2dp"
            android:text="Show Answer"
            android:layout_weight="2"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/orange"
            android:textSize="18sp"
            app:drawableLeftCompat="@drawable/ic_eye" />
        <ImageView
            android:id="@+id/SpeechIconImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/play_game_background"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_microphone" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/textIconImageView"
            android:visibility="gone"
            android:background="@drawable/play_game_background"
            android:src="@drawable/ic_edit"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/KidsAnswerLayout"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/actionLayout">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answers_Mcq">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banana"
                android:textSize="20sp"
                android:textColorHint="@color/orange"
                android:textColor="@color/orange"
                android:id="@+id/firstOption"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:id="@+id/secondOption"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orange"
                android:textSize="20sp"
                android:textColor="@color/orange"
                android:id="@+id/thirdOption"/>
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answerEditTxt"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        android:textSize="20sp"
        android:layout_below="@+id/KidsAnswerLayout"
        android:background="@drawable/answer_background"
        android:visibility="gone"
        android:textColor="@color/orange"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:layout_marginVertical="5dp"
        android:textSize="20sp"
        android:id="@+id/submitBtn"
        android:layout_below="@+id/answerEditTxt"
        android:background="@drawable/dashboard_background"/>



</RelativeLayout>